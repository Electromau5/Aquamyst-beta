<h1 align="center">Create new consumer type</h1>
	<%= form_for(@consumer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :name %>
			</div>
				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Consumer type", autofocus: true %>
				</div>
		</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
	<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			<%= link_to "Cancel", root_path %>
		</div>